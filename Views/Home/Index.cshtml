@{
    ViewData["Title"] = "Chefs";
}

<div class="text-center">
    <h1 class="display-4 border-bottom">Check out our roster of Chefs!</h1>
    <div>
        <a asp-controller="Home" asp-action="NewChef">Add a Chef</a>
    </div>
        <table id="display-table" display="width: 100%;">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th># of Dishes</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var chef in ViewBag.Chefs)
                {
                    <tr>
                        <td>
                            <span>@chef.FirstName </span>
                            <span>@chef.LastName</span>
                        </td>
                        <td>
                            @chef.Age
                        </td>
                        <td>
                            @chef.CreatedDishes.Count
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>
